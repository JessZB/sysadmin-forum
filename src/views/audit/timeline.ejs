<%- include('../layout/header') %>

    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col">
                <h3 class="fw-bold"><i class="fa-solid fa-clock-rotate-left me-2"></i>Auditoría de Movimientos</h3>
                <p class="text-muted">Registro histórico de acciones en la plataforma.</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <ul class="nav nav-tabs mb-4" id="auditTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="timeline-tab" data-bs-toggle="tab"
                            data-bs-target="#timeline-view" type="button" role="tab">
                            <i class="fa-solid fa-stream me-2"></i>Vista Timeline
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="table-tab" data-bs-toggle="tab" data-bs-target="#table-view"
                            type="button" role="tab">
                            <i class="fa-solid fa-table me-2"></i>Vista Tabla
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="auditTabsContent">

                    <!-- TAB 1: TIMELINE VIEW -->
                    <div class="tab-pane fade show active" id="timeline-view" role="tabpanel">
                        <div class="row justify-content-center">
                            <div class="col-lg-10">

                                <% if (logs.length===0) { %>
                                    <div class="alert alert-light text-center border">
                                        <i class="fa-solid fa-wind fa-2x mb-3 text-muted"></i>
                                        <p>No hay registros de actividad aún.</p>
                                    </div>
                                    <% } %>

                                        <div class="timeline">
                                            <% logs.forEach(log=> { %>
                                                <div class="timeline-item">
                                                    <div class="timeline-date text-end pe-3 d-none d-md-block">
                                                        <% const d=new Date(log.created_at); const
                                                            dateStr=d.toLocaleDateString(); const
                                                            timeStr=d.toLocaleTimeString([], {hour: '2-digit' ,
                                                            minute:'2-digit'}); %>
                                                            <div class="fw-bold">
                                                                <%= dateStr %>
                                                            </div>
                                                            <small class="text-muted">
                                                                <%= timeStr %>
                                                            </small>
                                                    </div>

                                                    <div class="timeline-marker">
                                                        <div class="marker-dot shadow-sm">
                                                            <i class="fa-solid <%= getIcon(log.action) %>"></i>
                                                        </div>
                                                        <div class="marker-line"></div>
                                                    </div>

                                                    <div class="timeline-content card shadow-sm mb-4 border-0">
                                                        <div class="card-body p-3">
                                                            <div
                                                                class="d-flex justify-content-between align-items-center mb-1">
                                                                <h6 class="card-title fw-bold mb-0 text-primary">
                                                                    <%= log.action %>
                                                                        <%= log.entity %>
                                                                </h6>
                                                                <small class="text-muted d-md-none">
                                                                    <%= dateStr %>
                                                                        <%= timeStr %>
                                                                </small>
                                                            </div>

                                                            <p class="card-text mb-2 text-dark">
                                                                <%= log.details %>
                                                            </p>

                                                            <div
                                                                class="d-flex justify-content-between align-items-center mt-2 border-top pt-2">
                                                                <small class="text-muted">
                                                                    <i class="fa-solid fa-user me-1"></i>
                                                                    <strong>
                                                                        <%= log.username %>
                                                                    </strong>
                                                                    <span class="badge bg-light text-dark border ms-1">
                                                                        <%= log.role %>
                                                                    </span>
                                                                </small>

                                                                <small class="text-muted"
                                                                    title="IP: <%= log.ip_address %>">
                                                                    <% if(log.branch_name) { %>
                                                                        <i class="fa-solid fa-building me-1"></i>
                                                                        <%= log.branch_name %>
                                                                            <% } else { %>
                                                                                <i class="fa-solid fa-globe"></i> Global
                                                                                <% } %>
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                            </div>
                        </div>
                    </div>

                    <!-- TAB 2: TABLE VIEW (Bootstrap Table) -->
                    <div class="tab-pane fade" id="table-view" role="tabpanel">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-0">
                                <table id="tablaAuditoria" data-toggle="table" data-pagination="true"
                                    data-page-size="25" data-page-list="[10, 25, 50, 100]" data-search="true"
                                    data-search-highlight="true" data-show-refresh="true" data-show-columns="true"
                                    data-sort-name="created_at" data-sort-order="desc" data-icons-prefix="bi"
                                    data-icons="icons" class="table table-striped table-hover align-middle mb-0">

                                    <thead class="table-light">
                                        <tr>
                                            <th data-field="created_at" data-sortable="true"
                                                data-formatter="dateFormatter">Fecha / Hora</th>
                                            <th data-field="username" data-sortable="true"
                                                data-formatter="userFormatter">Usuario</th>
                                            <th data-field="action" data-sortable="true"
                                                data-formatter="actionFormatter">Acción</th>
                                            <th data-field="entity" data-sortable="true"
                                                data-formatter="entityFormatter">Entidad</th>
                                            <th data-field="details" data-sortable="false"
                                                data-formatter="detailsFormatter">Detalle</th>
                                            <th data-field="branch_name" data-sortable="true"
                                                data-formatter="branchFormatter">Sucursal / IP</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% logs.forEach(log=> { %>
                                            <tr data-created-at="<%= log.created_at %>"
                                                data-username="<%= log.username %>" data-role="<%= log.role %>"
                                                data-action="<%= log.action %>" data-entity="<%= log.entity %>"
                                                data-details="<%= log.details %>"
                                                data-branch-name="<%= log.branch_name || '' %>"
                                                data-ip-address="<%= log.ip_address %>">
                                                <td>
                                                    <%= log.created_at %>
                                                </td>
                                                <td>
                                                    <%= log.username %>
                                                </td>
                                                <td>
                                                    <%= log.action %>
                                                </td>
                                                <td>
                                                    <%= log.entity %>
                                                </td>
                                                <td>
                                                    <%= log.details %>
                                                </td>
                                                <td>
                                                    <%= log.branch_name || '' %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <style>
        /* Estilos Timeline CSS */
        .timeline {
            position: relative;
            padding: 20px 0;
        }

        .timeline-item {
            display: flex;
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-date {
            width: 120px;
            flex-shrink: 0;
            padding-top: 15px;
        }

        .timeline-marker {
            width: 60px;
            flex-shrink: 0;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .marker-dot {
            width: 36px;
            height: 36px;
            background: #fff;
            border: 2px solid #dee2e6;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2;
            font-size: 0.9rem;
        }

        .marker-line {
            flex-grow: 1;
            width: 2px;
            background: #e9ecef;
            position: absolute;
            top: 36px;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1;
        }

        .timeline-item:last-child .marker-line {
            display: none;
        }

        .timeline-content {
            flex-grow: 1;
            border-left: 4px solid transparent;
        }

        .timeline-content:hover {
            border-left: 4px solid #0d6efd;
            transition: 0.3s;
        }

        /* Ajustes para Tabs */
        .nav-tabs .nav-link {
            color: #6c757d;
            cursor: pointer;
        }

        .nav-tabs .nav-link.active {
            color: #0d6efd;
            font-weight: bold;
        }
    </style>

    <script>
        // Pasar datos del servidor al cliente
        window.auditLogs = <% - JSON.stringify(logs) %>;
    </script>

    <%- include('../layout/footer') %>